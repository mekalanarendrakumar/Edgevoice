# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[*.{json,yml,yaml}]
indent_size = 2

[*.js]
indent_size = 2

[*.{html,css}]
indent_size = 2

[Makefile]
indent_style = tab
